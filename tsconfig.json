{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "./renderer/lib/*",
      ],
      "@components/*": [
        "./renderer/components/*",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "renderer/next.config.js",
    "app",
    "dist"
  ]
}
